Powershell -ExecutionPolicy UnRestricted -NoProfile -Command "{ try{Get-WmiObject Win32_EncryptableVolume -N ROOT\CIMV2\Security\MicrosoftVolumeEncryption -Filter "ProtectionStatus=0"}catch{write-host "No drive found"} | Sort @{Expression={if ($_.DriveLetter -match $env:SystemDrive) {$Matches[0]}};Ascending=$false}|ForEach-Object{manage-bde.exe -on -rp $_.DriveLetter -s;if($_.DriveLetter -ne $env:SystemDrive -and -not $_.IsAutoUnlockEnabled().IsAutoUnlockEnabled){manage-bde -autounlock -enable $_.DriveLetter}}}"
